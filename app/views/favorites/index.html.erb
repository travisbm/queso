<p id="notice"><%= notice %></p>

<h1>Listing Favorites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Cheese</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorites.each do |favorite| %>
      <tr>
        <td><%= favorite.user.first_name %></td>
        <td><%= favorite.cheese.name %></td>
        <td><%= button_to 'Show', favorite, method: :get, :class => 'btn btn-default' %></td>
        <td><%= button_to 'Destroy', favorite, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
