<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= button_to 'Show', user, method: :get, :class => "btn btn-default" %></td>
        <td><%= button_to 'Cheeses', user_favorites_path(user.id), method: :get, :class => "btn btn-default" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
